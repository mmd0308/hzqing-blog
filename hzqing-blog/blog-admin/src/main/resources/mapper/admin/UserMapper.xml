<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="UserMapper">
    <resultMap id="userMap" type="user">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="note" property="note"/>
        <result column="email" property="email"/>
        <result column="full_name" property="fullName" />
    </resultMap>
    <sql id="table">
        sys_user
    </sql>
    <sql id="field">
        id,
        username,
        password,
        note,
        email,
        full_name
    </sql>
    <sql id="fieldValue">
        #{id},
        #{username},
        #{password},
        #{note},
        #{email},
        #{fullName}
    </sql>
    <insert id="save" parameterType="user">
        INSERT  INTO
        <include refid="table"/>
        (
        <include refid="field"/>
        )
        VALUES
        (
        <choose>
            <when test="id == null || id == ''">
                (SELECT replace((SELECT  uuid()),"-","")),
            </when>
            <otherwise>
                #{id},
            </otherwise>
        </choose>
        #{username},
        #{password},
        #{note},
        #{email},
        #{fullName}
        )
    </insert>
    <select id="query" parameterType="user" resultMap="userMap">
        SELECT
        <include refid="field"/>
        FROM
        <include refid="table"/>
        where 1 = 1
        <if test="username != null and username != ''">
            AND username LIKE '%${username}%'
            <if test="email != null and email != ''">
                OR email LIKE '%${email}%'
            </if>
        </if>

    </select>
    <select id="selectById" parameterType="String" resultMap="userMap">
        SELECT
        <include refid="field"/>
        FROM
        <include refid="table"/>
        WHERE id = #{0}
    </select>
    <update id="update" parameterType="user" >
        UPDATE
        <include refid="table"/>
        SET
        id = #{id}
        <if test="username != null and username !=''">
            , username = #{username}
        </if>
        <if test="email != null and email !=''">
            , email = #{email}
        </if>
        <if test="note != null and note !=''">
            , note = #{note}
        </if>
        <if test="fullName != null and fullName ！= ''">
            , full_name = #{fullName}
        </if>
        WHERE
        id = #{id}
    </update>
    <delete id="deletedById" parameterType="String">
        DELETE FROM
        <include refid="table"/>
        WHERE
        id = #{0}
    </delete>

    <insert id="batchSave" parameterType="list">
        INSERT INTO rl_user_role(id,user_id,role_id,note)
        VALUES
        <foreach collection="list"  item="item" separator=",">
            (
            (SELECT replace((SELECT uuid()),"-","")),
            #{item.user_id},
            #{item.role_id},
            null
            )
        </foreach>

    </insert>
    <!--根据用户id删除用户权限-->
    <delete id="deleteUserRoleByUserId" parameterType="String">
        DELETE  FROM  rl_user_role
        WHERE
          user_id = #{0}
    </delete>


    <select id="getUserByUName" resultMap="userMap" parameterType="string">
        SELECT
          <include refid="field"/>
        FROM
          <include refid="table"/>
        WHERE
          username = #{0}
    </select>

    <select id="getRoleCodeByUid" resultType="string" parameterType="string">
        SELECT DISTINCT s.role_code FROM  sys_role s LEFT  JOIN rl_user_role r ON  s.id = r.role_id  WHERE  user_id = #{0}
    </select>
</mapper>